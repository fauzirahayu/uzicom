@startuml
left to right direction

actor "Admin" as Admin

package "Sistem Manajemen Haji" {
    ' Authentication
    usecase "Login" as UC1

    ' Dashboard
    usecase "Lihat Dashboard" as UC3

    ' Jamaah Management
    usecase "Kelola Jamaah" as UC4
    usecase "Tambah Jamaah" as UC5
    usecase "Edit Jamaah" as UC6
    usecase "Hapus Jamaah" as UC7
    usecase "Lihat Jamaah" as UC8

    ' Pembimbing Management
    usecase "Kelola Pembimbing" as UC9
    usecase "Tambah Pembimbing" as UC10
    usecase "Edit Pembimbing" as UC11
    usecase "Hapus Pembimbing" as UC12
    usecase "Lihat Pembimbing" as UC13

    ' Admin Account Management
    usecase "Kelola Akun Admin" as UC14
    usecase "Tambah Admin" as UC15
    usecase "Edit Admin" as UC16
    usecase "Hapus Admin" as UC17
    usecase "Lihat Akun Admin" as UC18

    ' News Management
    usecase "Kelola Berita" as UC24
    usecase "Tambah Berita" as UC25
    usecase "Edit Berita" as UC26
    usecase "Hapus Berita" as UC27
    usecase "Lihat Berita" as UC28

    ' Reports and Uploads
    usecase "Generate Laporan" as UC29
    usecase "Upload Foto" as UC34
    usecase "Generate Bukti Booking" as UC35

    ' Includes and Extends
    UC3 ..> UC1 : include
    UC4 ..> UC1 : include
    UC9 ..> UC1 : include
    UC14 ..> UC1 : include
    UC24 ..> UC1 : include
    UC29 ..> UC1 : include
    UC34 ..> UC1 : include
    UC35 ..> UC1 : include

    UC5 ..> UC4 : include
    UC8 ..> UC4 : include
    UC4 --> UC6 : <<extend>>
    UC4 --> UC7 : <<extend>>

    UC10 ..> UC9 : include
    UC13 ..> UC9 : include
    UC9 --> UC11 : <<extend>>
    UC9 --> UC12 : <<extend>>

    UC15 ..> UC14 : include
    UC18 ..> UC14 : include
    UC14 --> UC16 : <<extend>>
    UC14 --> UC17 : <<extend>>

    UC25 ..> UC24 : include
    UC28 ..> UC24 : include
    UC24 --> UC26 : <<extend>>
    UC24 --> UC27 : <<extend>>
}

'
' Admin relations
'
Admin --> UC1
Admin --> UC3
Admin --> UC4
Admin --> UC9
Admin --> UC14
Admin --> UC24
Admin --> UC29
Admin --> UC34
Admin --> UC35

@enduml
